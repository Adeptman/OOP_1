#include <iostream>

using namespace std;

const int LNAME = 25;

class STUDENT
{

private:    
    char name[LNAME];
    int age;
    float grade;

public:
    STUDENT()
    {
        for (int i = 0; i < 25; i++) {
            name[i] = 0;       //конструктор класса
        }
        age = 0;
        grade = 0;
    }

    char* GetName()     //получение имени
    {
        return name;
    }

    int GetAge() const      //получение возраста
    {
        return age;
    }

    float GetGrade() const      //получение рейтинга
    {
        return grade;
    }

    void SetName(char* name)       //устанавливается имя
    {
        int i = 0;
        while (*name != '\0')   //имя перебирается посимвольно до тех пор, пока слово не кончится
        {
            this->name[i] = *name;      //присваиваем массиву char каждый символ
            name++;                     //перемещаем указатель на следующий символ
            i++;
        }
    }

    void SetAge(int age)    //устанавливается возраст 
    {
        this->age = age;
    }

    void SetGrade(float grade)      //устанавливается рейтинг
    {
        this->grade = grade;
    }

    void Set(char* name, int age, float grade)      //устанавливается имя, возраст, рейтинг
    {
        int i = 0;
        while (*name != '\0')
        {
            this->name[i] = *name;
            name++;
            i++;
        }
        this->age = age;
        this->grade = grade;
    }

    void Show()     //выводится имя, возраст, рейтинг
    {
        cout << "Имя студента: " << name << endl;
        cout << "Возраст студента: " << age << endl;
        cout << "Рейтинг студента: " << grade << endl;
    }

};

int main()
{
    setlocale(LC_ALL, "Russian");
    STUDENT student;      //создается объект класса STUDENT
    char name[25];
    int age;
    float grade;
    cout << "Введите имя студента(используйте латиницу, не более 24 символов): ";
    cin >> name;
    cout << endl << "Введите возраст студента: ";
    cin >> age;
    cout << endl << "Введите рейтинг студента: ";
    cin >> grade;
    student.SetName(name);
    cout << endl << student.GetName() << endl;
    student.SetAge(age);
    cout << student.GetAge() << endl;
    student.SetGrade(grade);
    cout << student.GetGrade() << endl << endl;
    cout << "Общий вывод данных о студенте: " << endl;
    student.Set(name, age, grade);
    student.Show();
    return 0;
}
